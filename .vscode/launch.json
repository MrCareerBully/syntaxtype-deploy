    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch Site",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend"
        },
        {
            "command": "npm start",
            "name": "Frontend",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/frontend",
            
        },
        {
            "type": "java",
            "name": "Backend",
            "request": "launch",
            "mainClass": "com.syntaxtype.demo.DemoApplication",
            "projectName": "demo",
            "vmArgs": "-Dspring.devtools.restart.enabled=false"
        }
    ],
    "compounds": [
        {
            "name": "Full Launch (Backend, Frontend, Browser)",
            "configurations": ["Backend", "Frontend", "Launch Site"],
            "stopAll": true
        }
    ]
}